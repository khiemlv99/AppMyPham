<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/com_facebook_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--    làm mờ thanh status bar    -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <item name="android:statusBarColor">@color/com_facebook_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <!--        xóa màn hình Preview khi load lên-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--        xóa màn hình Preview khi load lên-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemehihi" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--    làm mờ thanh status bar    -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <!--        xóa màn hình Preview khi load lên-->
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="DialogScale">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="StatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#0ED7F1</item>
    </style>

</resources>
