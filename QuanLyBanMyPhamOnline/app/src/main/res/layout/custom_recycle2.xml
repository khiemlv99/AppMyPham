<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_re2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:background="@null"
        android:id="@+id/imageview_ry2"
        android:layout_width="100dp"
        android:layout_height="120dp"/>

    <TextView
        android:text="Loại sản phẩm"
        android:id="@+id/recyclerView2_id"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageview_ry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/recycle_view2_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá sản phẩm"
        android:textColor="#F00"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/recyclerView2_id"/>


</RelativeLayout>